<script>
    //cambiar imagen
    let imagenInicial = '/tokio 2020.png';
    let contador = 0;

    function cambiarImagen(elemento_img) {
        let imagenes = [
            '/Jasmine-PNG-Photos.png',
            '/Paloma-min.png',
            '/Abuelo_de_Billy.png',
            '/e9d1ba23e4e48d04640a0d38684dc8fa.png',
            '/png-transparent-bird-pixar-up.png'
        ];

        if(contador == imagenes.length){
            elemento_img.src = imagenInicial;
            contador = 0;
        }else{
            elemento_img.src = imagenes[contador];
            contador++;
        };
    };
</script>

